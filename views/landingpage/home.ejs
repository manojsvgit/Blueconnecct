            justify-content: space-between;
            align-items: center;
        }
        
        .logo a {
            font-size: 1.8rem;
            font-weight: 700;
            color: #0275d8;
        }
        
        .main-nav ul {
            display: flex;
        }
        
        .main-nav li {
            margin-left: 20px;
        }
        
        .main-nav a {
            color: #333;
            font-weight: 500;
        }
        
        .main-nav a:hover {
            color: #0275d8;
        }
        
        /* Hero Section */
