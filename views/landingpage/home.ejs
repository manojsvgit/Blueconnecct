    <script>
        // Basic JavaScript for interface interactions
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle for auth tabs
            const authTabButtons = document.querySelectorAll('.auth-toggle button');
            if (authTabButtons.length) {
                authTabButtons.forEach(button => {
                    button.addEventListener('click', function() {
                        authTabButtons.forEach(btn => btn.classList.remove('active'));
                        this.classList.add('active');
                    });
                });
            }
            
            // Toggle for dashboard tabs
            const dashboardTabButtons = document.querySelectorAll('.dashboard-tabs button');
            if (dashboardTabButtons.length) {
                dashboardTabButtons.forEach(button => {
                    button.addEventListener('click', function() {
                        dashboardTabButtons.forEach(btn => btn.classList.remove('active'));
                        this.classList.add('active');
                    });
                });
            }
        });
